.container
  %h1= @blog.name
  %ul.nav.nav-pills
    %li= link_to 'Back', blogs_path
    %li= link_to 'Add a Plan', new_blog_planned_date_path(@blog)

  %table.table
    %thead
      %tr
        %th Topic
        %th Date
        %th Controls
    %tbody
      - @blog.planned_dates.each do |date|
        %tr
          %td= date.content
          %td= date.planned_date
          %td
            %ul.nav.nav-pills
              %li= link_to 'Edit', edit_blog_planned_date_path(date.blog.id, date)
              %li= link_to 'Destroy', blog_planned_date_path(date.blog.id, date), :method => :delete, :data => { :confirm => 'Are you sure?' }


